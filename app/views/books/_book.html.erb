<div class="book-item col-md-3 view-book" book-id="<%= book.id %>">
  <br>
  <div><img src="<%= book.image %>" width="100%" height= "200px"></div>
  <p><%= link_to book.name.truncate(40), book_path(book) %></p>
  <p><%= t ".author" %>: <%= book.author.name %></p>
  <p><%= t ".price" %>: <%= book.default_price.to_i %>
    <%= Settings.currency.usa %></p>
  <%= button_tag t(".addcart"),
    class: "btn btn-success btn-block btn-add-to-cart " %>
</div>
