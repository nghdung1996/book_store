<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h2 class="title"><%= t ".bill-detail" %></h2>
    <div class="col-md-3">
      <div class="background-fff profile-container bill-detail">
        <div class="title"><%= t ".info-address" %></div>
        <div class="">
          <div class="full-name">
            <%= @bill.full_name %>
          </div>
          <div class="address">
            <%= t ".address" %>: <%= @bill.address %>
          </div>
          <div class="phone">
            <%= t ".phone" %>: <%= @bill.phone %>
          </div>
          <div class="email">
            <%= t ".email" %>: <%= @bill.email %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-9">
      <div class="background-fff profile-container bill-detail">
        <div class="title"><%= t ".books-ordered" %></div>
        <div>
          <table class="table table-bordered">
            <tr>
              <th><%= t ".book" %></th>
              <th><%= t ".price" %></th>
              <th><%= t ".quantity" %></th>
              <th><%= t ".total-price" %></th>
            </tr>
            <%= render partial: "line_item", collection: @bill.detail_bills %>
          </table>
        </div>
        <div class="text-right">
          <%= t ".total-price" %>: <b><%= @bill.total_price %></b>
          <%= Settings.currency.usa %>
        </div>
      </div>
    </div>
  </div>
</div>
