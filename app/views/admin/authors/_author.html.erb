<tr>
  <td><%= link_to author.name, admin_author_path(author) %></td>
  <td><%= author.description.truncate(Settings.author.description) %></td>
  <td>
    <%= link_to "", edit_admin_author_path(author),
      class: "btn btn-primary btn-xs glyphicon glyphicon-pencil" %>
  </td>
  <td>
    <% if author.books.empty? %>
    <%= link_to "", admin_author_path(author), method: :delete,
      class: "btn btn-danger btn-xs glyphicon glyphicon-trash",
      data: {confirm: t("are-you-sure")} %>
    <% else %>
      (<%= t :has_book, count: author.books.size %>)
    <% end %>
  </td>
</tr>
