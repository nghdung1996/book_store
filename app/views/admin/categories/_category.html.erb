<tr>
  <td><%= link_to category.name, admin_category_path(category) %></td>
  <td>
    <%= link_to "", edit_admin_category_path(category),
      class: "btn btn-primary btn-xs glyphicon glyphicon-pencil" %>
  </td>
  <td>
    <% if category.books.present? %>
      (<%= t "has" %> <%= pluralize category.books.size, t("book") %>)
    <% else %>
      <%= link_to "", admin_category_path(category), method: :delete,
        class: "btn btn-danger btn-xs glyphicon glyphicon-trash",
        data: {confirm: t("are-you-sure")} %>
    <% end %>
  </td>
</tr>
